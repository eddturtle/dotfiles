[user]
	email = edd@designedbyaturtle.co.uk
	name = Edd Turtle
[color]
	status = auto
	diff = auto
	branch = auto
[alias]
	who = shortlog -s -n --no-merges
	standup = shortlog --since=yesterday
	today = shortlog --since=midnight
	uncommit = reset --soft HEAD^
	unamend = reset --soft HEAD@{1}
	subs = submodule foreach git pull origin master
	hist = for-each-ref --count=5 --sort=-committerdate --format='%(refname:short)' refs/heads/
	sync = "!f(){ local branch=`git branch 2> /dev/null | sed -e '/^[^*]/d' -e \"s/* \\(.*\\)/\\1/\"`; git pull origin $branch && git push origin $branch; }; f"